<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Frontend.RegistrationController"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" bottom="40" left="30" right="30"/>
    </padding>

    <Label text="WhatsApp Clone" style="-fx-text-fill: #075e54; -fx-font-size: 24; -fx-font-weight: bold;"/>
    <Label text="Create your account" style="-fx-text-fill: #128c7e; -fx-font-size: 16;"/>
    
    <TextField fx:id="phoneField" promptText="Phone number" style="-fx-pref-width: 250;"/>
    <TextField fx:id="nameField" promptText="Username" style="-fx-pref-width: 250;"/>
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 250;"/>
    
    <Button text="Register" onAction="#handleRegister" 
            style="-fx-background-color: #075e54; -fx-text-fill: white; -fx-pref-width: 250;"/>
    
    <Label fx:id="statusLabel" style="-fx-text-fill: red; -fx-font-size: 12;"/>
    
    <Hyperlink text="Already have an account? Login" onAction="#goToLogin" 
               style="-fx-text-fill: #128c7e; -fx-border-color: transparent;"/>
</VBox>