<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.controllers.RegistrationController"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" bottom="40" left="30" right="30"/>
    </padding>

    <Label text="WhatsApp Clone" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    <TextField fx:id="phoneField" promptText="Phone number"/>
    <TextField fx:id="nameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Register" onAction="#handleRegister" style="-fx-pref-width: 200;"/>
    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
    <Hyperlink text="Already have an account? Login" onAction="#goToLogin"/>
</VBox>